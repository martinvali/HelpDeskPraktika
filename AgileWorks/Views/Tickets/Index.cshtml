@model IEnumerable<AgileWorks.Models.Ticket>

<partial name="_PageHeader" />

@if (Model.Count() == 0) {
    <p>There are no tickets at the moment.</p>
}
<ul>
    @foreach (var item in Model) {
   <li class="ticket-item @(item.MarkedAsUrgent ? "highlighted-ticket" : "")">
       <p class="ticket-description">@item.Description</p>
       <p class="ticket-subparagraph ticket-duedate"><span class="ticket-subheading">Due Date: </span>@item.DueDate</p>
       <p class="ticket-subparagraph ticket-date-created"><span class="ticket-subheading">Date Created: </span>@item.DateCreated</p>
       <form asp-action="Delete">
          <input type="hidden" asp-for="@item.Id" name="Id" />
          <input type="submit" value="Mark as done" class="btn btn-outline-primary mr-2 delete-button" />
       </form>
   </li>
}
</ul>